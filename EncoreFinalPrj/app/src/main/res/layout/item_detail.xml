<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical">

        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/shareviewitem_profile_textview"
                tools:text="User Name"/>

    </LinearLayout>

    <!-- Content ImageView -->
    <ImageView
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:src="@color/colorEmailSignIn"
            android:id="@+id/shareviewitem_imageview_content"
            android:scaleType="fitXY"/>

    <!-- favorite & comment -->
    -<LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp">

    <ImageView
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:id="@+id/shareviewitem_favorite_imageview"
            app:srcCompat="@drawable/ic_favorite_border"/>

    <ImageView android:layout_height="35dp"
               android:layout_width="35dp"
               android:src="@drawable/ic_chat_black"
               android:id="@+id/shareviewitem_comment_imageview"/>

</LinearLayout>

    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:id="@+id/shareviewitem_favoritecounter_textview"
              tools:text="좋아요 0개" android:layout_marginLeft="8dp"/>

    <TextView android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:id="@+id/shareviewitem_review_textview"
              tools:text="사진 내용" android:layout_marginLeft="8dp"
              android:layout_marginBottom="35dp"/>

</LinearLayout>